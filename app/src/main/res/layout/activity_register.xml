<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="REGISTER"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_persons"
            android:drawableStart="@drawable/ic_persons"
            android:layout_marginStart="30dp"
            android:drawablePadding="5dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/enter_username"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="text"
            android:id="@+id/username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawableStart="@drawable/ic_mail"
            android:layout_marginStart="30dp"
            android:drawablePadding="5dp"
            android:layout_marginEnd="30dp"
            android:hint="Enter Email"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/email"/>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/progressbar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_phones"
            android:drawableStart="@drawable/ic_phones"
            android:layout_marginStart="30dp"
            android:drawablePadding="5dp"
            android:layout_marginEnd="30dp"
            android:hint="Enter Phone Number"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/phone"/>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/progress"
            android:visibility="gone"
            android:elevation="7dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/enter_password"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="5dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="textPassword"
            android:id="@+id/password"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/register"
            android:background="@drawable/rounded"
            android:layout_marginStart="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Already Registered?Click here to login"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="70dp"
            android:id="@+id/already"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</RelativeLayout>